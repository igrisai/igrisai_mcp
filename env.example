# Environment Variables
OPENROUTER_API_KEY=your_openrouter_api_key_here
GRAPH_ACCESS_TOKEN=your_graph_market_jwt_access_token_here

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/deadhand_db

# Option 2: Individual database settings (fallback)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deadhand_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Twitter API Configuration (for Twitter sync service)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# Optional: For debugging
DEBUG=mcp:*
