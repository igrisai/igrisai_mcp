{
  "mcpServers": {
    "token-api": {
      "command": "npx",
      "args": ["@pinax/mcp", "--sse-url", "https://token-api.mcp.thegraph.com/sse"],
      "env": {
        "ACCESS_TOKEN": "<https://thegraph.market JWT Access Token>"
      }
    },
    "igrisai-mcp": {
      "command": "node",
      "args": ["dist/server.js"],
      "env": {
        "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}"
      }
    }
  },
  "tools": {
    "analyze_token_transfers": {
      "description": "Analyze token transfer events using Graph MCP and OpenRouter AI",
      "parameters": {
        "tokenAddress": {
          "type": "string",
          "description": "Token contract address to analyze"
        },
        "chain": {
          "type": "string",
          "enum": ["ethereum", "polygon", "arbitrum", "optimism", "base"],
          "description": "Blockchain network",
          "default": "ethereum"
        },
        "timeframe": {
          "type": "string",
          "enum": ["1h", "24h", "7d", "30d"],
          "description": "Time period for analysis",
          "default": "24h"
        }
      }
    },
    "analyze_token_swaps": {
      "description": "Analyze token swap events using Graph MCP and OpenRouter AI",
      "parameters": {
        "tokenAddress": {
          "type": "string",
          "description": "Token contract address to analyze"
        },
        "chain": {
          "type": "string",
          "enum": ["ethereum", "polygon", "arbitrum", "optimism", "base"],
          "description": "Blockchain network",
          "default": "ethereum"
        },
        "timeframe": {
          "type": "string",
          "enum": ["1h", "24h", "7d", "30d"],
          "description": "Time period for analysis",
          "default": "24h"
        }
      }
    },
    "generate_token_insights": {
      "description": "Generate comprehensive token insights using OpenRouter AI",
      "parameters": {
        "transferData": {
          "type": "object",
          "description": "Token transfer data from Graph MCP"
        },
        "swapData": {
          "type": "object",
          "description": "Token swap data from Graph MCP"
        },
        "analysisType": {
          "type": "string",
          "enum": ["comprehensive", "trading", "sentiment"],
          "description": "Type of analysis to generate",
          "default": "comprehensive"
        }
      }
    }
  },
  "examples": {
    "token_transfer_analysis": {
      "tool": "analyze_token_transfers",
      "parameters": {
        "tokenAddress": "0xA0b86a33E6441b8C4C8C0C4C8C0C4C8C0C4C8C0C",
        "chain": "ethereum",
        "timeframe": "24h"
      }
    },
    "token_swap_analysis": {
      "tool": "analyze_token_swaps",
      "parameters": {
        "tokenAddress": "0xA0b86a33E6441b8C4C8C0C4C8C0C4C8C0C4C8C0C",
        "chain": "ethereum",
        "timeframe": "7d"
      }
    },
    "comprehensive_token_insights": {
      "tool": "generate_token_insights",
      "parameters": {
        "transferData": {
          "totalTransfers": 150,
          "uniqueAddresses": 45,
          "totalVolume": "1000000"
        },
        "swapData": {
          "totalSwaps": 75,
          "averagePrice": "0.05",
          "priceChange": "+15%"
        },
        "analysisType": "comprehensive"
      }
    }
  }
}
