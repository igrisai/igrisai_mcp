{
  "mcpServers": {
    "token-api": {
      "command": "npx",
      "args": ["@pinax/mcp", "--sse-url", "https://token-api.mcp.thegraph.com/sse"],
      "env": {
        "ACCESS_TOKEN": "<https://thegraph.market JWT Access Token>"
      }
    }
  },
  "websocketServer": {
    "port": 8080,
    "endpoint": "ws://localhost:8080",
    "messageTypes": {
      "subscribe_token_activity": {
        "description": "Subscribe to real-time token activity updates",
        "parameters": {
          "userAddress": {
            "type": "string",
            "description": "User wallet address",
            "required": true
          },
          "tokenAddress": {
            "type": "string",
            "description": "Token contract address to monitor",
            "required": true
          },
          "chain": {
            "type": "string",
            "enum": ["ethereum", "polygon", "arbitrum", "optimism", "base"],
            "description": "Blockchain network",
            "default": "ethereum"
          }
        }
      },
      "unsubscribe_token_activity": {
        "description": "Unsubscribe from token activity updates",
        "parameters": {
          "userAddress": {
            "type": "string",
            "description": "User wallet address",
            "required": true
          },
          "tokenAddress": {
            "type": "string",
            "description": "Token contract address to stop monitoring",
            "required": true
          }
        }
      },
      "get_token_analysis": {
        "description": "Get comprehensive token analysis with AI insights",
        "parameters": {
          "userAddress": {
            "type": "string",
            "description": "User wallet address",
            "required": true
          },
          "tokenAddress": {
            "type": "string",
            "description": "Token contract address to analyze",
            "required": true
          },
          "chain": {
            "type": "string",
            "enum": ["ethereum", "polygon", "arbitrum", "optimism", "base"],
            "description": "Blockchain network",
            "default": "ethereum"
          }
        }
      }
    }
  },
  "examples": {
    "subscribe_to_token": {
      "type": "subscribe_token_activity",
      "userAddress": "0xd8dA6BF26964aF9D7eEd9e03E53415D37aA96045",
      "tokenAddress": "0xA0b86a33E6441b8C4C8C0C4C8C0C4C8C0C4C8C0C",
      "chain": "ethereum"
    },
    "unsubscribe_from_token": {
      "type": "unsubscribe_token_activity",
      "userAddress": "0xd8dA6BF26964aF9D7eEd9e03E53415D37aA96045",
      "tokenAddress": "0xA0b86a33E6441b8C4C8C0C4C8C0C4C8C0C4C8C0C"
    },
    "get_token_analysis": {
      "type": "get_token_analysis",
      "userAddress": "0xd8dA6BF26964aF9D7eEd9e03E53415D37aA96045",
      "tokenAddress": "0xA0b86a33E6441b8C4C8C0C4C8C0C4C8C0C4C8C0C",
      "chain": "ethereum"
    }
  }
}
